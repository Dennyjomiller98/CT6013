<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--Servlet and Mapping for Servlet (For MongoDB Server)-->
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>servlets.StudentRegistration</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/servlets/StudentRegistration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DatabaseSelection</servlet-name>
        <servlet-class>servlets.DatabaseSelection</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DatabaseSelection</servlet-name>
        <url-pattern>/servlets/DatabaseSelection</url-pattern>
    </servlet-mapping>
</web-app>