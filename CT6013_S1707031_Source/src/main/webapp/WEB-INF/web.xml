<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--Homepage Selection Servlet-->
    <servlet>
        <servlet-name>HomepageServlet</servlet-name>
        <servlet-class>servlets.HomepageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomepageServlet</servlet-name>
        <url-pattern>/servlets/HomepageServlet</url-pattern>
    </servlet-mapping>

    <!--ETL Update-->
    <servlet>
        <servlet-name>ETL</servlet-name>
        <servlet-class>servlets.etl.ETL</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ETL</servlet-name>
        <url-pattern>/servlets/etl/ETL</url-pattern>
    </servlet-mapping>

    <!--Redirects-->
    <servlet>
        <servlet-name>redirects</servlet-name>
        <servlet-class>servlets.redirects.Redirects</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>redirects</servlet-name>
        <url-pattern>/servlets/redirects/Redirects</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/servlets/Login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlets.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/servlets/Logout</url-pattern>
    </servlet-mapping>

    <!--2FA-->
    <servlet>
        <servlet-name>Authentication2Factor</servlet-name>
        <servlet-class>servlets.Authentication2Factor</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authentication2Factor</servlet-name>
        <url-pattern>/servlets/Authentication2Factor</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AuthenticateLogin</servlet-name>
        <servlet-class>servlets.AuthenticateLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthenticateLogin</servlet-name>
        <url-pattern>/servlets/AuthenticateLogin</url-pattern>
    </servlet-mapping>

    <!--Preview of DW data-->
    <servlet>
        <servlet-name>Load</servlet-name>
        <servlet-class>servlets.dwpreview.Load</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Load</servlet-name>
        <url-pattern>/servlets/dwpreview/Load</url-pattern>
    </servlet-mapping>
</web-app>